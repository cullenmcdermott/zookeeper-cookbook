# zookeeper - Apache ZooKeeper coordination service
#

[Unit]
Description=ZooKeeper coordination service
After=network.target

[Service]
User=<%= @user %>
Group=<%= @user %>
SyslogIdentifier=zookeeper
Restart=on-failure
ExecStart=<%= @command %> start-foreground
LimitNOFILE=8192

[Install]
WantedBy=multi-user.target
